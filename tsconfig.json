{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "CommonJS",
	  "lib": ["ES2022", "DOM"],                // ⬅️ Added DOM for fetch types
	  "moduleResolution": "node",
	  "outDir": "dist",
	  "rootDir": "src",
	  "sourceMap": true,
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "allowSyntheticDefaultImports": true,
	  "resolveJsonModule": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["src"]
  }
  