{
  "name": "open-gist",
  "displayName": "Open Gist Folder by ID",
  "description": "Open, create, and manage GitHub Gists as folders in VS Code. Add or remove files, upload full folders, and simulate folder structures using flattened filenames.",
  "icon": "icon.png",
  "version": "0.0.3",
  "publisher": "coderbro",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderbro0/open-gist.git"
  },
  "bugs": {
    "url": "https://github.com/coderbro0/open-gist/issues"
  },
  "homepage": "https://github.com/coderbro0/open-gist#readme",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:open-gist.openGistById",
    "onCommand:open-gist.createGist",
    "onCommand:open-gist.addFileToGist",
    "onCommand:open-gist.addFolderToGist",
    "onCommand:open-gist.deleteGist",
    "onCommand:open-gist.removeFileFromGist",
    "onCommand:open-gist.setGitHubToken",
    "onCommand:open-gist.clearGitHubToken",
    "onCommand:open-gist.summarizeGist",
    "onCommand:open-gist.exploreGists",
    "onCommand:open-gist.toggleAutoSync",
    "onCommand:open-gist.openScratchNote",
    "onCommand:open-gist.pasteImageToGist",
    "onCommand:open-gist.launchPlayground",
    "onCommand:open-gist.forkCurrentGist",
    "onCommand:open-gist.starUnstarCurrentGist",
    "onCommand:open-gist.followGitHubUser"
  ],
  "contributes": {
    "commands": [
      { "command": "open-gist.openGistById", "title": "coderbro: Open Gist by ID" },
      { "command": "open-gist.createGist", "title": "coderbro: Create New Gist" },
      { "command": "open-gist.addFileToGist", "title": "coderbro: Add File to Gist" },
      { "command": "open-gist.addFolderToGist", "title": "coderbro: Upload Folder to Gist" },
      { "command": "open-gist.deleteGist", "title": "coderbro: Delete Gist" },
      { "command": "open-gist.removeFileFromGist", "title": "coderbro: Remove File from Gist" },
      { "command": "open-gist.setGitHubToken", "title": "coderbro: Set GitHub Token" },
      { "command": "open-gist.clearGitHubToken", "title": "coderbro: Clear GitHub Token" },
      { "command": "open-gist.summarizeGist", "title": "coderbro: Summarize This Gist" },
      { "command": "open-gist.exploreGists", "title": "coderbro: Open Gist Explorer" },
      { "command": "open-gist.toggleAutoSync", "title": "coderbro: Toggle Auto Gist Sync" },
      { "command": "open-gist.openScratchNote", "title": "coderbro: New Scratch Note" },
      { "command": "open-gist.pasteImageToGist", "title": "coderbro: Paste Image to Gist" },
      { "command": "open-gist.launchPlayground", "title": "coderbro: Open Code Playground" },
      { "command": "open-gist.forkCurrentGist", "title": "coderbro: Fork Current Gist" },
      { "command": "open-gist.starUnstarCurrentGist", "title": "coderbro: Star/Unstar Gist" },
      { "command": "open-gist.followGitHubUser", "title": "coderbro: Follow GitHub User" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gistExplorerContainer",
          "title": "Gist Explorer",
          "icon": "media/gist.png"
        }
      ]
    },
    "views": {
      "gistExplorerContainer": [
        {
          "id": "gistExplorerView",
          "name": "Gists",
          "icon": "media/gist.png"
        }
      ]
    },
    "configuration": {
      "title": "Open Gist Settings",
      "properties": {
        "open-gist.autoSync": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync Gist changes on file save"
        },
        "open-gist.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "gemini"],
          "description": "Choose AI provider for code summarization (OpenAI or Google Gemini)."
        },
        "open-gist.openaiApiKey": {
          "type": "string",
          "description": "Your OpenAI API key used for summarizing files."
        },
        "open-gist.geminiApiKey": {
          "type": "string",
          "description": "Your Google Gemini API key used for summarizing files."
        }
      }
    }
  },
  "keywords": [
    "gist",
    "gist explorer",
    "github",
    "vscode extension",
    "gist manager",
    "open gist",
    "upload to gist",
    "download gist",
    "sync gist",
    "ai summarizer",
    "auto sync",
    "code sharing",
    "developer tools",
    "openai",
    "code snippet",
    "gist folder",
    "summarize code",
    "vscode gist",
    "gist integration",
    "cloud snippets",
    "gemini",
    "playground",
    "image paste",
    "scratch notes",
    "star gist",
    "fork gist",
    "follow user"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.cjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.cjs --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.30",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}
